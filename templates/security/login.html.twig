{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section id="hero" class="d-flex align-items-center" style="height: 38px;top: -15px;position: static;display: flex;">
</section><!-- End Hero -->
<main id="main">
<section id="login" class="login">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
          <h2>{{ 'Login'|trans }}</h2>
        </div>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    {{ 'login.already_logged'|trans({'%user%': app.user.userIdentifier}) }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% else %}

            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div class="col-md-6 col-xs-12">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>
            </div>
            <div class="row text-left"><div class="col mt-2">            
                <input type="checkbox" name="_remember_me" id="remember_me"> {{ 'Remember me'|trans }}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                <button class="btn btn-primary float-end" type="submit">{{ 'Login'|trans }}</button>
            </div></div>
            {% endif %}
        </form>
    </div>
</section>
</main>
{% endblock %}
